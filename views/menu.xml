        <menuitem id="farm_menu_vendor_bill"
                  name="Vendor Bill"
                  parent="farm_menu_documents"
                  action="account.action_move_in_invoice_type"
                  sequence="31"/>

        <menuitem id="farm_menu_material_move"
                  name="Material stock move"
                  parent="farm_menu_documents"
                  action="stock.action_picking_tree_all"
                  sequence="32"/>

        <menuitem id="farm_menu_product_move"
                  name="Produce stock move"
                  parent="farm_menu_documents"
                  action="stock.action_picking_tree_all"
                  sequence="33"/>

        <menuitem id="farm_menu_customer_invoice"
                  name="Customer Invoice"
                  parent="farm_menu_documents"
                  action="account.action_move_out_invoice_type"
                  sequence="34"/>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_product_category"
                  name="Product Category"
                  parent="farm_menu_product"
                  action="product.product_category_action_form"
                  sequence="42"/>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_product_product"
                  name="Product"
                  parent="farm_menu_product"
                  action="stock.product_template_action_product"
                  sequence="43"/>

    </data>
</odoo>