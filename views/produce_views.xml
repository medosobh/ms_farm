<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="farm_produce_view_form" model="ir.ui.view">
        <field name="name">farm.produce.form</field>
        <field name="model">farm.produce</field>
        <field name="arch" type="xml">
            <form string="produce">
                <header>
                    <button name="button_farm_stock_in" string="Create Stock Produce" type="object" class="oe_highlight"
                            help="Create Stock Picking In" states="order"/>
                    <field name="state" widget="statusbar" options="{'clickable': '0'}" clickable="True" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group string="Basic">
                            <field name="name"/>
                            <field name="projects_id" widget="selection"/>
                            <field name="short_name"/>
                        </group>
                        <group string="Information">
                            <field name="user_id" widget="selection"/>
                            <field name="issue_date"/>
                            <field name="p_order_cost" widget="monetary"/>
                            <field name="active" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                            <field name="currency_id" groups="base.group_multi_currency" widget="selection"/>
                            <field name="partner_id" widget="selection"/>
                            <field name="stock_warehouse" widget="selection"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="farm_operation_olines" string="Order Lines">
                            <field name="produce_order_line_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" widget="selection"/>
                                    <field name="name" widget="section_and_note_text"/>
                                    <field name="categ_id" widget="selection" invisible="1"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="company_id" widget="selection" invisible="1"/>
                                    <field name="currency_id" invisible="1" widget="selection"/>
                                    <field name="product_uom"/>
                                    <field name="qty"/>
                                    <field name="note"/>
                                    <field name="price_subtotal" sum="Total Cost"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="farm_produce_view_tree" model="ir.ui.view">
        <field name="name">farm.produce.tree</field>
        <field name="model">farm.produce</field>
        <field name="arch" type="xml">
            <tree string="produce">
                <field name="name"/>
                <field name="state"/>
                <field name="projects_id" widget="selection"/>
                <field name="short_name"/>
                <field name="user_id" widget="selection"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="issue_date"/>
                <field name="p_order_cost" sum="Total Order"/>
                <field name="partner_id" widget="selection"/>
                <field name="stock_warehouse" widget="selection"/>
            </tree>
        </field>
    </record>

    <record id="farm_produce_view_calendar" model="ir.ui.view">
        <field name="name">farm.produce.calendar</field>
        <field name="model">farm.produce</field>
        <field name="arch" type="xml">
            <calendar string="produce"
                      date_start="issue_date"
                      create="1"
                      quick_add="False"
                      mode="month"
                      hide_time="true"
                      event_limit="5"
                      form_view_id="%(farm_produce_view_form)d"
                      event_open_popup="False">
                <field name="user_id" filters="1" invisible="1"/>
                <field name="short_name" filters="1" invisible="1"/>
                <field name="name"/>
                <field name="short_name"/>
            </calendar>
        </field>
    </record>

    <record id="farm_produce_view_pivot" model="ir.ui.view">
        <field name="name">farm.produce.pivot</field>
        <field name="model">farm.produce</field>
        <field name="arch" type="xml">
            <pivot string="produce">
                <field name="projects_id" type="row" interval="month"/>
                <field name="short_name" type="row"/>
                <field name="name" type="row"/>
                <field name="issue_date" type="col"/>
                <field name="p_order_cost" type="measure" widget="monetary"/>
                <field name="state"/>
                <field name="user_id"/>
                <field name="partner_id" widget="selection"/>
                <field name="stock_warehouse" widget="selection"/>
            </pivot>
        </field>
    </record>

    <record id="farm_produce_view_graph" model="ir.ui.view">
         <field name="name">farm.produce.graph</field>
         <field name="model">farm.produce</field>
         <field name="arch" type="xml">
             <graph string="Produce Analysis" type="line" sample="1">
                 <field name="issue_date" interval="day"/>
                 <field name="p_order_cost" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="farm_produce_view_search" model="ir.ui.view">
        <field name="name">farm.produce.search</field>
        <field name="model">farm.produce</field>
        <field name="arch" type="xml">
            <search>
                <field name="state"/>
                <field name="projects_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="name"/>
                <filter name="filter_orders" string="Orders" domain="[('state', '=', 'order')]"/>
                <filter name="filter_documents" string="Documents" domain="[('state', '=', 'document')]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group by">
                    <filter string="Project" name="group_by_project" context="{'group_by':'projects_id'}"/>
                </group>
                <searchpanel>
                    <field name="projects_id" select="multi" string="Relative Project" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="farm_produce_action" model="ir.actions.act_window">
        <field name="name">Farm Produce Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">farm.produce</field>
        <field name="view_mode">tree,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_filter_order': 1, 'default_state': 'order'}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first produce order!
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_produce_"
              name="Produce Orders"
              parent="farm_menu_orders"
              action="farm_produce_action"
              sequence="23"/>
</odoo>