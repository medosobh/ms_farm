<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="farm_materials_view_form" model="ir.ui.view">
        <field name="name">farm.materials.form</field>
        <field name="model">farm.materials</field>
        <field name="arch" type="xml">
            <form string="materials">
                <header>
                    <button name="button_farm_stock_out"
                            string="Stock Issue"
                            type="object"
                            class="oe_highlight"
                            help="Create Stock Picking Out"
                            states="order"/>
                    <field name="state" widget="statusbar" options="{'clickable': '0'}" clickable="True" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_materials_box">
                        <button name="action_stock_picking_list" type="object"
                                class="oe_stat_button"
                                icon="fa-truck">
                            <div class="o_stat_info">
                                <field name="materials_consumption_count"/>
                                <span class="o_stat_text">Count</span>
                            </div>
                        </button>
                        <button name="action_stock_picking_list" type="object"
                                class="oe_stat_button"
                                icon="fa-dollar">
                            <div class="o_stat_info">
                                <field name="materials_consumption_account_count"/>
                                <span class="o_stat_text">Journal Count</span>
                            </div>
                        </button>
                        <button name="action_stock_picking_list" type="object"
                                class="oe_stat_button"
                                icon="fa-dollar">
                            <div class="o_stat_info">
                                <field name="currency_id" invisible="1" groups="base.group_multi_currency"/>
                                <field name="materials_consumption_account_total" widget='monetary'
                                       options="{'currency_field': 'currency_id'}"/>
                                <span class="o_stat_text">Amount</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group string="Basic">
                            <field name="name" />
                            <field name="projects_id" widget="selection" />
                            <field name="short_name"/>
                            <field name="category_id" widget="selection" />
                            <field name="user_id" widget="selection" />
                            <field name="analytic_account_id"/>
                        </group>
                        <group string="Information ">
                            <field name="issue_date" />
                            <field name="m_order_cost" widget="monetary" />
                            <field name="active" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company" widget="selection" />
                            <field name="currency_id" groups="base.group_multi_currency" widget="selection" />
                            <field name="partner_id" widget="selection" />
                            <field name="stock_warehouse" widget="selection" />
                            <field name="location_id" widget="selection" />
                            <field name="picking_type_id" widget="selection" />
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="farm_material_olines" string="Order Lines">
                            <field name="materials_order_line_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" widget="selection"/>
                                    <field name="name" widget="section_and_note_text"/>
                                    <field name="categ_id" widget="selection" invisible="1"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="company_id" widget="selection" invisible="1"/>
                                    <field name="currency_id" widget="selection" invisible="1"/>
                                    <field name="product_uom"/>
                                    <field name="qty"/>
                                    <field name="note"/>
                                    <field name="price_subtotal" sum="Total Cost"/>

                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="sequence" widget="handle" invisible="1"/>
                                            <field name="product_id" widget="selection"/>
                                            <field name="name" widget="section_and_note_text"/>
                                            <field name="product_uom" />
                                            <field name="qty" />
                                        </group>
                                        <group>
                                            <field name="price_unit" widget="monetary"/>
                                            <field name="price_subtotal" sum="Total Cost"/>
                                            <field name="categ_id" widget="selection" invisible="1"/>
                                            <field name="company_id" widget="selection" invisible="1"/>
                                            <field name="currency_id" widget="selection" invisible="1"/>
                                        </group>
                                    </group>
                                    <field name="note"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="farm_materials_view_tree" model="ir.ui.view">
        <field name="name">farm.materials.tree</field>
        <field name="model">farm.materials</field>
        <field name="arch" type="xml">
            <tree string="materials">
                <field name="name"/>
                <field name="state"/>
                <field name="projects_id"/>
                <field name="short_name"/>
                <field name="category_id"/>
                <field name="user_id" widget="selection"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="issue_date"/>
                <field name="m_order_cost" sum="Total Order"/>
                <field name="partner_id" widget="selection"/>
                <field name="stock_warehouse" widget="selection"/>
            </tree>
        </field>
    </record>

    <record id="farm_materials_view_calendar" model="ir.ui.view">
        <field name="name">farm.materials.calendar</field>
        <field name="model">farm.materials</field>
        <field name="arch" type="xml">
            <calendar string="materials"
                      date_start="issue_date"
                      create="1"
                      quick_add="False"
                      mode="month"
                      color="category_id"
                      hide_time="true"
                      event_limit="5"
                      form_view_id="%(farm_materials_view_form)d"
                      event_open_popup="False">
                <field name="category_id" filters="1" invisible="1"/>
                <field name="user_id" filters="1" invisible="1"/>
                <field name="short_name" filters="1" invisible="1"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="short_name"/>
            </calendar>
        </field>
    </record>

    <record id="farm_materials_view_pivot" model="ir.ui.view">
        <field name="name">farm.materials.pivot</field>
        <field name="model">farm.materials</field>
        <field name="arch" type="xml">
            <pivot string="materials">
                <field name="projects_id" type="row"/>
                <field name="short_name" type="row"/>
                <field name="name" type="row"/>
                <field name="issue_date" type="col"/>
                <field name="category_id" type="col"/>
                <field name="m_order_cost" type="measure" widget="monetary"/>

                <field name="state"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="stock_warehouse"/>
            </pivot>
        </field>
    </record>

    <record id="farm_materials_view_graph" model="ir.ui.view">
        <field name="name">farm.materials.graph</field>
        <field name="model">farm.materials</field>
        <field name="arch" type="xml">
            <graph string="Material Analysis" type="line" sample="1">
                <field name="issue_date" interval="day"/>
                <field name="m_order_cost" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="farm_materials_view_search" model="ir.ui.view">
        <field name="name">farm.materials.search</field>
        <field name="model">farm.materials</field>
        <field name="arch" type="xml">
            <search>
                <field name="state"/>
                <field name="projects_id"/>
                <field name="user_id"/>
                <field name="name"/>
                <filter name="filter_orders" string="Orders" domain="[('state', '=', 'order')]"/>
                <filter name="filter_documents" string="Documents" domain="[('state', '=', 'document')]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <filter name="filter_user" string="User" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group by">
                    <filter string="Project" name="group_by_project" context="{'group_by':'projects_id'}"/>
                    <filter string="Category" name="group_by_category" context="{'group_by':'category_id'}"/>
                    <filter string="Order Man" name="group_by_user" context="{'group_by':'user_id'}"/>
                </group>
                <searchpanel>
                    <field name="projects_id" select="multi" string="Relative Project" enable_counters="1"/>
                    <field name="category_id" select="multi" string="Relative Category" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="farm_materials_action" model="ir.actions.act_window">
        <field name="name">Farm Materials Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">farm.materials</field>
        <field name="view_mode">tree,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_filter_user': 1}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first material order!
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_materials_"
              name="Material Orders"
              parent="farm_menu_orders"
              action="farm_materials_action"
              sequence="22"/>

</odoo>